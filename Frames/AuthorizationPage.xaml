<Page x:Class="HydropressDB.AuthorizationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HydropressDB"
      xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
      mc:Ignorable="d" 
      d:DesignHeight="368" d:DesignWidth="618"
      Title="AuthorizationPage"
      Background="White" DataContext="{DynamicResource Mvm}">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label Content="Авторизация" FontSize="20" HorizontalContentAlignment="Center"></Label>
            <xctk:WatermarkTextBox Watermark="Логин" Width="200" Height="32" Margin="5" FontSize="20"/>
            <xctk:WatermarkPasswordBox Watermark="Пароль" PasswordChar="#" Width="200" Height="32" Margin="5" FontSize="20"/>
        </StackPanel>
    </Grid>
</Page>
